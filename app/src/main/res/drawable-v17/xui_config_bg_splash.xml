    android:opacity="opaque">
    <item android:drawable="@color/xui_config_color_white" />

    <item android:bottom="@dimen/xui_config_app_logo_bottom">
        <bitmap
            android:gravity="center"
            android:src="@drawable/ic_splash_app_logo" />
