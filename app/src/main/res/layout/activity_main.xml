<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/webhook_url_label"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_webhook_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/webhook_url_hint"
        android:inputType="textUri" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/fallback_phone_label"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_fallback_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fallback_phone_hint"
        android:inputType="phone" />

    <CheckBox
        android:id="@+id/cb_enable_forwarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/enable_forwarding_label" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/save_settings" />

</LinearLayout>
