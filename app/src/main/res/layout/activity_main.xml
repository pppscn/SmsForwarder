<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sim1_number_label"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_sim1_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sim1_number_hint"
        android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sim2_number_label"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_sim2_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sim2_number_hint"
        android:inputType="phone" />

    <CheckBox
        android:id="@+id/cb_enable_forwarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/enable_forwarding_label" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/save_settings" />

</LinearLayout>
